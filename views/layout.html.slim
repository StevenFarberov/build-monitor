html
  head
    title Build Monitor
    link type='text/css' rel='stylesheet' href='/stylesheets/monitor.css'
    script type='text/javascript' src='/javascripts/vendor/jquery.min.js'
    script type='text/javascript' src='/javascripts/lib/monitor.js'
